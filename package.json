{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A simple Electron application",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"electron .\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "desktop",
    "app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}
